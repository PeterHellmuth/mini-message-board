<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
      <div class="message-container">
        <% messages.forEach((message) => { %>

          <div class="message">
              <span class="text">
                <%= message.text %>
              </span>
              <span class="user">
                -<%= message.user %>
              </span>
              <span class="added">
                Posted: <%= message.added %>
              </span>
          </div>
      <%});%>
      </div>
      <a href="/new/" class="button">New Message</a>
  </body>
</html>
